{
    "type": "module",
    "scripts": {
        "build": "pnpm build:firefox",
        "build:pre:firefox": "pnpm build:gen_manifest firefox && pnpm build:copy_assets",
        "build:pre:chromium": "pnpm build:gen_manifest chrome && pnpm build:copy_assets",
        "build:firefox": "pnpm build:pre:firefox & vite build --mode firefox & node ./npm-scripts/whatTimeIsIt.js",
        "build:chromium": "pnpm build:pre:chromium & vite build --mode chromium & node ./npm-scripts/whatTimeIsIt.js",
        "build:gen_manifest": "node ./npm-scripts/manifestChange.js",
        "build:copy_assets": "node ./npm-scripts/copy-assets2dist.js",
        "debug": "pnpm debug:firefox",
        "debug:firefox": "pnpm build:firefox --watch",
        "debug:chromium": "pnpm build:chromium --watch",
        "lint": "pnpm lint:eslint & pnpm lint:prettier & pnpm lint:stylelint",
        "lint:eslint": "eslint .",
        "lint:prettier": "prettier --check **/*.js **/*.cjs **/*.ts **/*.vue **/*.css **/*.scss",
        "lint:stylelint": "stylelint **/*.{css,scss}",
        "format": "pnpm format:eslint & pnpm format:prettier & pnpm format:stylelint",
        "format:eslint": "eslint --fix .",
        "format:prettier": "prettier --write **/*.js **/*.cjs **/*.ts **/*.vue **/*.css **/*.scss",
        "format:stylelint": "stylelint --fix **/*.{css,scss}"
    },
    "dependencies": {
        "@types/chrome": "^0.0.254",
        "@types/webextension-polyfill": "^0.10.7",
        "@webcomponents/custom-elements": "^1.6.0",
        "bootstrap-icons": "^1.11.2",
        "pinia": "^2.1.7",
        "vue": "^3.3.11",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "@eslint/js": "^8.55.0",
        "@types/node": "^20.10.4",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@unplugin-vue-ce/sub-style": "1.0.0-beta.19",
        "@vitejs/plugin-vue": "^4.5.2",
        "autoprefixer": "^10.4.16",
        "dotenv": "^16.3.1",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.19.2",
        "globals": "^13.24.0",
        "node-fetch": "^3.3.2",
        "prettier": "^3.1.1",
        "sass": "^1.69.5",
        "stylelint": "^16.0.2",
        "stylelint-config-standard-scss": "^12.0.0",
        "tailwindcss": "^3.3.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3",
        "vite": "^5.0.7",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^1.8.25",
        "web-ext": "^7.9.0"
    },
    "packageManager": "pnpm@8.11.0",
    "engines": {
        "node": ">=20.9.0",
        "pnpm": ">=8.11.0"
    }
}
