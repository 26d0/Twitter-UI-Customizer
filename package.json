{
    "scripts": {
        "build": "pnpm build:firefox",
        "build:pre:firefox": "pnpm build:gen_manifest firefox && pnpm build:copy_assets",
        "build:pre:chromium": "pnpm build:gen_manifest chrome && pnpm build:copy_assets",
        "build:firefox": "pnpm build:pre:firefox & vite build --mode firefox",
        "build:chromium": "pnpm build:pre:chromium & vite build --mode chromium",
        "build:gen_manifest": "node ./manifestChange.mjs",
        "build:copy_assets": "node ./npm-scripts/copy-assets2dist.mjs",
        "debug": "pnpm debug:firefox",
        "debug:firefox": "pnpm build:firefox --watch",
        "debug:chromium": "pnpm build:chromium --watch",
        "lint": "pnpm lint:eslint & pnpm lint:prettier & pnpm lint:stylelint",
        "lint:eslint": "eslint --ext .js,.mjs,.ts,.vue .",
        "lint:prettier": "prettier --check **/*.js **/*.mjs **/*.ts **/*.vue **/*.css **/*.scss",
        "lint:stylelint": "stylelint **/*.{css,scss}",
        "format": "pnpm format:eslint & pnpm format:prettier & pnpm format:stylelint",
        "format:eslint": "eslint --fix --ext .js,.mjs,.ts,.vue .",
        "format:prettier": "prettier --write **/*.js **/*.mjs **/*.ts **/*.vue **/*.css **/*.scss",
        "format:stylelint": "stylelint --fix **/*.{css,scss}"
    },
    "dependencies": {
        "@types/chrome": "^0.0.253",
        "@types/webextension-polyfill": "^0.10.7",
        "@webcomponents/custom-elements": "^1.6.0",
        "bootstrap-icons": "^1.11.2",
        "pinia": "^2.1.7",
        "vue": "^3.3.10",
        "webextension-polyfill": "^0.10.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.3",
        "@typescript-eslint/eslint-plugin": "^6.13.2",
        "@typescript-eslint/parser": "^6.13.2",
        "@unplugin-vue-ce/sub-style": "^1.0.0-beta.18",
        "@vitejs/plugin-vue": "^4.5.1",
        "autoprefixer": "^10.4.16",
        "dotenv": "^16.3.1",
        "eslint": "^8.55.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-vue": "^9.19.2",
        "node-fetch": "^3.3.2",
        "postcss-import": "^15.1.0",
        "prettier": "^3.1.0",
        "sass": "^1.69.5",
        "stylelint": "^15.11.0",
        "stylelint-config-standard-scss": "^11.1.0",
        "tailwindcss": "^3.3.5",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "vite": "^5.0.5",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^1.8.24",
        "web-ext": "^7.9.0"
    },
    "engines": {
        "node": ">=20.9.0",
        "pnpm": ">=8.11.0"
    }
}
