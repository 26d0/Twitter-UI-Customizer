        "lint:eslint": "eslint .",
        "lint:stylelint": "stylelint **/*.{css,pcss,vue}",
        "lint:prettier": "prettier --check **/*.css **/*.pcss",
        "format": "pnpm format:eslint & pnpm format:stylelint & pnpm format:prettier",
        "format:eslint": "eslint --fix .",
        "format:stylelint": "stylelint --fix **/*.{css,pcss,vue}",
        "format:prettier": "prettier --write **/*.css **/*.pcss"
    },
    "dependencies": {
        "@unocss/reset": "^0.59.4",
