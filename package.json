{
    "devDependencies": {
        "@typescript-eslint/parser": "^6.0.0",
        "eslint-config-prettier": "^8.8.0",
        "prettier": "^3.0.0",
        "vite": "^4.4.9",
        "web-ext": "^7.6.2"
    },
    "dependencies": {
        "@microsoft/eslint-formatter-sarif": "^2.1.7",
        "eslint": "^8.10.0",
        "node-fetch": "^3.3.2"
    },
    "scripts": {
        "build": "yarn build:firefox",
        "build:firefox": " yarn build:gen_manifest:firefox & yarn build:common",
        "build:chrome": "yarn build:gen_manifest:chrome & yarn build:common",
        "build:common": "yarn build:copy_assets & yarn build:vite",
        "build:copy_assets": "node ./npm-scripts/copy-assets2dist.mjs",
        "build:vite": "vite build",
        "build:vite_watch": "vite build --mode development --watch",
        "build:gen_manifest:firefox": "node ./manifestChange.mjs firefox",
        "build:gen_manifest:chrome": "node ./manifestChange.mjs chrome",
        "build:gen_manifest:chromeCRX": "node ./manifestChange.mjs chromeCRX",
        "debug": "yarn debug:firefox",
        "debug:firefox": "yarn build:copy_assets & yarn build:gen_manifest:firefox & yarn build:vite_watch",
        "debug:chrome": "node npm-scripts/run.js chrome"
    }
}
