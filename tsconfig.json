{
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "esModuleInterop": true,
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "isolatedModules": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowImportingTsExtensions": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "types": ["vite/client"],
        "paths": {
            "@content/*": ["./src/content/*"],
            "@shared/*": ["./src/shared/*"],
            "@modules/*": ["./src/content/modules/*"],
            "@third-party/*": ["./third-party/*"]
        }
    }
}
